                        <Button Content="Help" Click="Button_Click"></Button>
                        <Button Content="About"></Button>
                        <Separator></Separator>
                        <Button x:Name="BtnPopupExit" Content="Exit" Click="BtnPopupExit_Click"></Button>
                    </StackPanel>
                </materialDesign:PopupBox>
            </StackPanel>
            <StackPanel Margin="21,-3,-21,3">
