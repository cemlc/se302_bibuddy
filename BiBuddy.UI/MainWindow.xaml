<Window x:Class="BiBuddy.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BiBuddy.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <DockPanel>
        <!--File, Edit, Search, and Help-->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="New BibTeX"/>
                <MenuItem Header="Open"/>
                <Separator/>
                <MenuItem Header="Import"/>
                <MenuItem Header="Export"/>
                <Separator/>
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Undo"/>
                <MenuItem Header="Redo"/>
                <Separator/>
                <MenuItem Header="Copy"/>
                <MenuItem Header="Paste"/>
                <MenuItem Header="Cut"/>
                <Separator/>
                <MenuItem Header="Select all"/>
            </MenuItem>
            <MenuItem Header="Search">
                <MenuItem Header="Search"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="Help"/>
                <MenuItem Header="About BiBuddy"/>
            </MenuItem>

        </Menu>
        <!--This part of code for showing all existing publication type-->
        <ListView Width="125" DockPanel.Dock="Left">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="120" Header="Publications">
                        
                    </GridViewColumn>
                    
                </GridView>
            </ListView.View>
            
        </ListView>
        
        <!--Toolbar feature. It may include icons-->
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Command="New" Content="New" />
                <Button Command="Open" Content="Open" />
                <Button Command="Save" Content="Save" />
                <Separator/>
                <Button Command="Cut" Content="Cut" />
                <Button Command="Copy" Content="Copy" />
                <Button Command="Paste" Content="Paste" />
                <Separator/>
                <Button Command="Undo" Content="Undo" />
                <Button Command="Redo" Content="Redo" />
                
                <Separator/>
                <Button Command="Help" Content="Help" />
                

            </ToolBar>
        </ToolBarTray>
        <Grid>
            
        </Grid>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                
            </StatusBarItem>
        </StatusBar>
    </DockPanel>
</Window>
